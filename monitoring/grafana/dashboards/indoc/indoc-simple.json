{
  "uid": "indoc-simple",
  "title": "inDoc Monitoring - Simple",
  "tags": ["indoc"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "Total API Requests",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 }
    },
    {
      "type": "graph",
      "title": "API Request Rate",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "rate(http_requests_total[5m])",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Document Uploads",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(document_uploads_total)",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 }
    },
    {
      "type": "graph",
      "title": "Response Time (ms)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "http_request_duration_seconds{job=\"indoc-backend\"}",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "gridPos": { "x": 6, "y": 8, "w": 12, "h": 8 }
    }
  ]
}
