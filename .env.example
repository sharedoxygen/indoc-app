# Database - Using existing localhost PostgreSQL
# For Docker containers, use host.docker.internal
# For local development, use localhost
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=indoc
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres-cbr!000Rr


# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Weaviate
WEAVIATE_URL=http://localhost:8060

# Redis
REDIS_URL=redis://localhost:6379

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
# Available models: gpt-oss:120b, deepseek-r1:70b, kimi-k2:72b, qwen2.5vl:72b
OLLAMA_MODEL=gpt-oss:120b
# Model selection based on use case:
# - gpt-oss:120b: Best for complex reasoning and general tasks
# - deepseek-r1:70b: Excellent for code generation and technical documents
# - kimi-k2:72b: Best for multilingual documents and context understanding
# - qwen2.5vl:72b: Best for documents with images, charts, and visual content

# Security
JWT_SECRET_KEY=jwt-cbr!000Rr
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# Encryption
FIELD_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# API
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Frontend
VITE_API_URL=http://localhost:8000/api/v1

# Email Ingestion (optional)
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Storage
TEMP_REPO_PATH=/tmp/indoc_temp
STORAGE_PATH=/var/lib/indoc/storage

# Observability
ENABLE_TELEMETRY=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
DATADOG_API_KEY=
GRAFANA_CLOUD_API_KEY=

# Compliance
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_FIELD_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true