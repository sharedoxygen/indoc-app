# inDoc Environment Configuration Template
# Copy this file to .env and customize for your environment

# Application
APP_NAME=inDoc
APP_VERSION=1.0.0
API_PREFIX=/api/v1
DEBUG=false

# Server
API_HOST=0.0.0.0
API_PORT=8000

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=indoc
POSTGRES_USER=indoc_user
POSTGRES_PASSWORD=indoc_dev_password

# Search Services
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=indoc_documents
WEAVIATE_URL=http://localhost:8080
WEAVIATE_CLASS=Document

# Cache and Queue
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI/LLM Services
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Security (IMPORTANT: Change these in production!)
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# User Passwords (Optional: Set to override random generation)
ADMIN_PASSWORD=admin123
REVIEWER_PASSWORD=reviewer123
UPLOADER_PASSWORD=uploader123
VIEWER_PASSWORD=viewer123
COMPLIANCE_PASSWORD=compliance123

# Encryption
FIELD_ENCRYPTION_KEY=
ENABLE_FIELD_ENCRYPTION=true

# File Storage
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,docx,xlsx,pptx,txt,html,xml,json,eml,png,jpg,jpeg,tiff

# CORS Origins (Frontend URLs)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Observability
ENABLE_TELEMETRY=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Compliance
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_AUDIT_LOGGING=true

# Performance
SEARCH_TIMEOUT_MS=200
RERANK_TIMEOUT_MS=100
LLM_TIMEOUT_S=30
